# ============================================================================
# Miyar V2 - Environment Variables
# ============================================================================

# Database (PlanetScale MySQL)
DATABASE_URL="mysql://user:password@host/miyar-v2?ssl={\"rejectUnauthorized\":true}"

# Auth - JWT secret for session tokens (required)
JWT_SECRET="your-secret-key-here"

# AI / LLM - Google Gemini (required for AI features)
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.5-flash"  # optional, defaults to gemini-2.5-flash

# Voice Transcription (optional — required for voice features)
OPENAI_API_KEY="your-openai-api-key"

# Storage - AWS S3 (optional — used for file/image uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-bucket-name"
AWS_REGION="us-east-1"

# Email Notifications (optional — used for owner alerts)
RESEND_API_KEY="your-resend-api-key"

# Google Maps (optional — used for geocoding & location features)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Server
PORT=3000
NODE_ENV=development
